<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvTractora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="E2474JNZ"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/ivCisterna"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCisterna"
            android:layout_width="72dp"
            android:layout_height="72dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_oil_tank" />

        <TextView
            android:id="@+id/tvCisterna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="R5084FSF"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/tvTractora"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/ivTractoraInspeccionada"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toTopOf="@+id/ivTractoraBloqueada"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCisterna"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_inspeccionado_false" />

        <ImageView
            android:id="@+id/ivTractoraBloqueada"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCisterna"
            app:srcCompat="@drawable/ic_ban" />

        <TextView
            android:id="@+id/tvFechaInspeccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="24/10/2019"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tvTractora"
            app:layout_constraintTop_toBottomOf="@+id/tvTractora" />

        <TextView
            android:id="@+id/tvCodTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="0034"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvFechaInspeccion"
            app:layout_constraintTop_toBottomOf="@+id/tvFechaInspeccion" />

        <TextView
            android:id="@+id/tvInstalacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Tarragona"
            android:textColor="@color/colorSecondaryText"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/tvFechaInspeccion"
            app:layout_constraintTop_toBottomOf="@+id/tvCisterna" />

        <TextView
            android:id="@+id/tvDesTrans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="Citesa"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvCodTrans"
            app:layout_constraintTop_toBottomOf="@+id/tvInstalacion" />

        <TextView
            android:id="@+id/tvConductor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:text="1024545"
            android:textColor="@color/colorSecondaryText"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvDesTrans"
            app:layout_constraintTop_toBottomOf="@+id/tvInstalacion" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>