<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/ConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivTractora"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="16dp"
            android:contentDescription="@string/cabezatractora"
            app:layout_constraintBottom_toTopOf="@+id/ivDivider2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_frontal_truck" />


        <TextView
            android:id="@+id/tvTractora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="E2474JNZ"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivTractora"
            app:layout_constraintEnd_toStartOf="@+id/ind_observaciones"
            app:layout_constraintStart_toEndOf="@+id/ivTractora"
            app:layout_constraintTop_toTopOf="@+id/ivTractora" />


        <ImageView
            android:id="@+id/ivDivider2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_margin="16dp"
            android:background="@color/colorPrimaryDark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivCisternaBloqueada"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDivider2"
            app:srcCompat="@drawable/ic_checked" />

        <TextView
            android:id="@+id/tvCisterna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R5084FSF"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/ivCisterna"
            app:layout_constraintEnd_toStartOf="@+id/ivCisternaBloqueada"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintStart_toEndOf="@+id/ivCisterna"
            app:layout_constraintTop_toTopOf="@+id/ivCisterna" />

        <ImageView
            android:id="@+id/ind_observaciones"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_ban" />


        <ImageView
            android:id="@+id/ivTractoraInspeccionada"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/ivDivider2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ind_observaciones"
            app:srcCompat="@drawable/ic_inspeccionado_false" />

        <ImageView
            android:id="@+id/ivCisternaInspeccionada"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivCisternaBloqueada"
            app:srcCompat="@drawable/ic_inspeccionado_true" />

        <ImageView
            android:id="@+id/ivCisterna"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivDivider2"
            app:srcCompat="@drawable/ic_oil_tank" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>